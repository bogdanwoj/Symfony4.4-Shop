{% extends 'base.html.twig' %}

{% block title %} Product{% endblock %}

{% block body %}
    <div class="container ">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 mt-5">
                    <h1>{{ product.name }}</h1>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12">
                    <div class="row row mt-5 ">
                        <div class="col-5 border border-success ">
                            <img class="card-img-top mt-5" src="{{ asset('images/' ~ product.images.first) }}"
                                 alt="{{ product.name }}">
                        </div>
                        <div class="col-4">
                            <div>
                                <span>
                                    Vandut de: <a
                                            href="{{ url('vendor', {'vendor':product.vendor.id}) }}">{{ product.vendor.name }}</a>
                                </span>
                            </div>
                            <div class="mt-2">
                                Garantie comerciala: <strong>24 luni</strong>
                            </div>
                            <div class="text-center mt-4" >
                                <h5>Rezerva in magazin si livram astazi</h5>
                            </div>
                        </div>
                        <div class="col-3">
                            <div>
                                <h6><s>{{ product.price |number_format(2, '.', '.') }}</s> Lei (-{{ product.discount }}
                                    %)</h6>
                                <h3 style="color: red">{{ product.finalPrice |number_format(2, '.', '.') }} Lei</h3>
                            </div>
                            <a href="{{ url('cart_add', {'product':product.id}) }}" class="btn btn-success w-100 mt-4">Adauga in Cos</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row mt-5">
            <div class="col-12">
                <h2>Descriere</h2>
            </div>
            <div class="col-12">
                <p>{{ product.description }}</p>
            </div>
        </div>
    </div>

{% endblock %}
